<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    tools:context="com.example.a1010.obesityguide.brainmanu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAdvice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/athiti_extralight"
            android:text="เกร็ดความรู้สำหรับผู้ป่วยโรคอ้วน"
            android:textAlignment="center"
            android:textColor="#FF5252"
            android:textSize="25sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btntips1"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn1"
                android:elevation="0dp"
                android:fontFamily="@font/athiti_extralight"
                android:onClick="Nexttips1"
                android:text="หลักโภชนาการ 9 ข้อ"
                android:textAlignment="center"
                android:textColor="#9575CD "
                android:textSize="26sp" />

            <Button
                android:id="@+id/btntips2"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn2"
                android:elevation="0dp"
                android:fontFamily="@font/athiti_extralight"
                android:onClick="Nexttips2"
                android:text="การปรุงอาหารที่ให้ไขมันต่ำ"
                android:textAlignment="center"
                android:textColor="#03A9F4 "
                android:textSize="26sp" />

            <Button
                android:id="@+id/btntips3"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn3"
                android:elevation="0dp"
                android:fontFamily="@font/athiti_extralight"
                android:onClick="Nexttips3"
                android:text="วิธีการกินอาหารไม่ให้อ้วน"
                android:textAlignment="center"
                android:textColor="#00BCD4 "
                android:textSize="26sp" />

            <Button
                android:id="@+id/btntips4"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn4"
                android:elevation="0dp"
                android:fontFamily="@font/athiti_extralight"
                android:onClick="Nexttips4"
                android:text="การปรับเปลี่ยนพฤติกรรม"
                android:textAlignment="center"
                android:textColor="#558B2F "
                android:textSize="26sp" />

            <Button
                android:id="@+id/btntips5"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn5"
                android:elevation="0dp"
                android:fontFamily="@font/athiti_extralight"
                android:onClick="Nexttips5"
                android:text="การอ่านฉลากสินค้า"
                android:textAlignment="center"
                android:textColor="#FFC107 "
                android:textSize="26sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

